@model IList<Project>
@{
    ViewData["Title"] = "Index";
}

<h1>All Projects</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Start Date</th>
            <th>Date Created</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Project project in Model)
        {
            <tr>
                <td>@project.ProjectId</td>
                <td>@project.ProjectName</td>
                <td>@($"{project.StartDate:d}")</td>
                <td>@project.DateCreated</td>
            </tr>
        }

    </tbody>

</table>

